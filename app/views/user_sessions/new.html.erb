<div class="alert alert-info">
  Don't have an account?
  <%= link_to new_user_path, class: 'nes-btn is-primary' do %>
    Sign Up &raquo;
  <% end %>
</div>
<div class="page-header"><h2>Sign In</h2></div>

<%= form_for @user_session do |f| %>
  <%= render 'shared/errors', object: @user_session %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'nes-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'nes-input' %>
  </div>

  <div class="form-group">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>

  <%= f.submit "Log in!", class: 'nes-btn' %>
<% end %>
