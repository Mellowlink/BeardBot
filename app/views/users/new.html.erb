<div class="page-header"><h2>Register</h2></div>

<%= form_for @user do |f| %>
  <%= render 'shared/errors', object: @user %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'nes-input', maxlength:20 %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'nes-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'nes-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'nes-input' %>
  </div>

  <%= f.submit 'Register', class: 'nes-btn is-primary' %>
<% end %>
